<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">
    
    <Button
        android:id="@+id/buttonBeginTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beginTestButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS"
        android:id="@+id/textView"
        android:layout_gravity="center" />
    <GridLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout"
        android:margin="20dp"
        android:padding="10dp"
        android:layout_height="72dp"
        android:layout_weight="0.14">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Speed"
            android:id="@+id/speedlbl"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/speed"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latitude:"
            android:id="@+id/latLbl"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lat"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longitude:"
            android:id="@+id/lngLbl"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lng"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lightLbl"
        android:text="Light Sensor"
        android:layout_gravity="center" />
    <GridLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout"
        android:margin="20dp"
        android:padding="10dp"
        android:layout_height="80dp">



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/openLbl"
        android:text="Backpack is :"
        android:layout_row="0"
        android:layout_column="0"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/light"
            android:text=""
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:text="Activity Detection"
    />
    <GridLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout"
        android:margin="20dp"
        android:padding="10dp"
        android:layout_height="80dp"
        android:layout_weight="0.23">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/activityLbl"
            android:text="Currently is :"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/activity"
            android:text=""
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_gravity="center"
        android:text="Temperature"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout"
        android:margin="20dp"
        android:padding="10dp"
        android:layout_height="80dp"
        android:layout_weight="0.21">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tcLbl"
            android:text="Current Temperature :"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tc"
            android:text=""
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

    <!--Button
        android:id="@+id/buttonRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/refreshButton" /-->

    <!--Spinner
        android:id="@+id/spinnerBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /-->

    <!--ListView
    android:id="@+id/listViewDevices"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1" /-->

</LinearLayout>
